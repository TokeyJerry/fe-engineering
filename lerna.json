{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "allowBranch": ["master", "feature/*"]
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ],
  "version": "independent"
}
